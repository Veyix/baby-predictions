@page
@model BirthModel
@{
    ViewData["Title"] = "Birth";
}

<p>
    Enter the baby's birth details to determine a winner
</p>

<form method="post">
    <div class="form-group">
        <label for="gender">Gender</label>
        <input type="radio"
               id="gender"
               name="gender"
               value="Male"
               @(Model.HaveDetailsAlreadyBeenEntered ? "disabled = 'disabled'" : "")
               checked />&nbsp;Male
        <input type="radio"
               id="gender"
               @(Model.HaveDetailsAlreadyBeenEntered ? "disabled = 'disabled'" : "")
               name="gender"
               value="Female" />&nbsp;Female
        <span asp-validation-for="Gender" class="alert-danger"></span>
    </div>

    <div class="form-group">
        <label for="birthdate">Birth Date</label>
        <input type="date"
               id="birthdate"
               class="form-control"
               @(Model.HaveDetailsAlreadyBeenEntered ? "disabled = 'disabled'" : "")
               name="birthdate"
               placeholder="dd/MM/yyyy" />
        <span class="text-muted">e.g. 13/11/2018</span>
        <span asp-validation-for="BirthDate" class="alert-danger"></span>
    </div>

    <div class="form-group">
        <label for="birthtime">Birth Time</label>
        <input type="time"
               class="form-control"
               @(Model.HaveDetailsAlreadyBeenEntered ? "disabled = 'disabled'" : "")
               id="birthtime"
               name="birthtime"
               placeholder="HH:mm" />
        <span asp-validation-for="BirthTime" class="alert-danger"></span>
        <span class="text-muted">e.g. 17:30 - note this is a 24-hour time format</span>
    </div>

    <div class="form-group">
        <label for="weightinpounds">Birth Weight</label>
        <input type="number"
               class="form-control"
               @(Model.HaveDetailsAlreadyBeenEntered ? "disabled = 'disabled'" : "")
               id="weightinpounds"
               name="weightinpounds"
               placeholder="0 pounds" />

        <input type="number"
               class="form-control"
               id="weightinounces"
               @(Model.HaveDetailsAlreadyBeenEntered ? "disabled = 'disabled'" : "")
               name="weightinounces"
               placeholder="0 ounces" />

        <span asp-validation-for="WeightInPounds" class="alert-danger"></span>
        <span asp-validation-for="WeightInOunces" class="alert-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">
        Submit
    </button>
</form>